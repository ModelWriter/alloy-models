{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "declaration": true,
    "noImplicitAny": true,
    "strictFunctionTypes": true,
    "strictNullChecks": true,
    "strict": true,
    "moduleResolution": "node",
    "noFallthroughCasesInSwitch": true,
    "strictPropertyInitialization": true,
    "preserveConstEnums": true,
    "outDir": "./dist"
  },
  "include": [
    "src/**/*"
  ]
}
